{% extends 'scaffold.twig' %}
{% block metaTitle %}Contact
{% endblock %}

{% block content %}

  <div class="card card-default">
    <div class="card-body">
      <form action="{{path_for('contact')}}" method="post">

        <div class="form-group">
          <label for="name">Enter Your Name</label>
          <input class="mb-3 form-control" id="name" name="name" type="text">
        </div>

        <div class="form-group">
          <label for="Email">Enter Your Email</label>
          <input class="mb-3 form-control" id="email" name="email" type="text">
        </div>

        <div class="form-group">
          <label for="message">Enter A Message</label>
          <textarea class="mb-3 form-control" cols="15" id="message" name="message" rows="10"></textarea>
        </div>

        <div class="form-group"></div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>

    </form>
  </div>
</div>{% endblock content %}